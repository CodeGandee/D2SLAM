# D2SLAM Original Jetson Docker Environment Configuration

# Build versions
CMAKE_VERSION=3.26.4
OPENCV_VERSION=4.5.4
FAISS_VERSION=1.7.4
ONNX_VERSION=1.12.1

# ROS Configuration
ROS_VERSION=noetic

# Hardware-specific settings for Jetson Orin
ENABLE_NEON=ON
CUDA_ARCH_BIN=8.7

# Workspace path
SWARM_WS=/root/swarm_ws

# SSH Configuration
SSH_USERNAME=me
SSH_PASSWORD=123456

# User settings (for X11 forwarding)
# USER=your_username
DISPLAY=:10.0

# NVIDIA runtime settings
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=all
